		{
			\tl_set:Nn \latin_ital_font_name { #5 }
			\bool_set_false:N \setlatin_ital_process
		}
		{
			\bool_set_true:N \setlatin_ital_process
		}

	}
	
	\tl_if_eq:nnTF { #1 } { mono }
	{
		\bool_set_true:N \latin_mono_mode
	}
	{
		\bool_set_false:N \latin_mono_mode
	}
	
