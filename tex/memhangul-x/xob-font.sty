		}
		{
			\process_set_korob_hanja { #1 } [ #7 ]
		}
	}
	{
		\IfValueTF { #8 }
		{
			\process_set_korob_hanja { #1 } ( #8 )
		}
		{
			\process_korob_only_hangul { #1 }
		}
	}
}

